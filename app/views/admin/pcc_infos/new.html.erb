<div class="row">
  <div class="col-sm-offset-3 col-sm-6">
    <h1 class="text-center">Add New Data</h1>
    <%= form_for( @pcc_info, url: admin_pcc_infos_path, method: :post) do |f| %>
      <table class="table table-bordered">
        <tr>
          <td>
            <%= f.check_box :filed %>
            <%= f.label :filed %>
          </td>
          <td colspan="2">
            <%= f.label :pcc %>
            <%= f.text_field :pcc, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <%= f.label :report %>
            <%= f.text_field :report, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :tran_id, 'Transaction ID' %>
            <%= f.text_field :tran_id, class: 'form-control' %>
          </td>
          <td colspan="2">
            <%= f.label :tran_type, 'Transaction Type' %>
            <%= f.select :tran_type, [['Contribution','Contribution'],['Expenditure','Expenditure']], {}, {class: 'form-control'} %>
          </td>
        </tr>
        <tr>
          <td colspan="2">
            <%= f.label :tran_date, 'Date' %>
            <%= f.text_field :tran_date, class: 'form-control', id: 'datepicker' %>
            <script type="text/javascript">
              $(function () {
                  $('#datepicker').datetimepicker({format: 'MM/DD/YYYY'});
              });
            </script>
          </td>
          <td>
            <%= f.label :tran_amt, 'Amount' %>
            <%= f.number_field :tran_amt, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.check_box :inkind %>
            <%= f.label :inkind %>
          </td>
          <td>
            <%= f.check_box :loan %>
            <%= f.label :loan %>
          </td>
          <td>
            <%= f.label :amends %>
            <%= f.text_field :amends, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <%= f.label :purpose %>
            <%= f.text_field :purpose, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :name %>
            <%= f.text_field :name, class: 'form-control' %>
          </td>
          <td>
            <%= f.label :address1 %>
            <%= f.text_field :address1, class: 'form-control' %>
          </td>
          <td>
            <%= f.label :address2 %>
            <%= f.text_field :address2, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td>
            <%= f.label :city %>
            <%= f.text_field :city, class: 'form-control' %>
          </td>
          <td>
            <%= f.label :state %>
            <%= f.select :state, [['AK', 'AK'],
                                  ['AL', 'AL'],
                                  ['AR', 'AR'],
                                  ['AZ', 'AZ'],
                                  ['CA', 'CA'],
                                  ['CO', 'CO'],
                                  ['CT', 'CT'],
                                  ['DC', 'DC'],
                                  ['DE', 'DE'],
                                  ['FL', 'FL'],
                                  ['GA', 'GA'],
                                  ['HI', 'HI'],
                                  ['IA', 'IA'],
                                  ['ID', 'ID'],
                                  ['IL', 'IL'],
                                  ['IN', 'IN'],
                                  ['KS', 'KS'],
                                  ['KY', 'KY'],
                                  ['LA', 'LA'],
                                  ['MA', 'MA'],
                                  ['MD', 'MD'],
                                  ['ME', 'ME'],
                                  ['MI', 'MI'],
                                  ['MN', 'MN'],
                                  ['MO', 'MO'],
                                  ['MS', 'MS'],
                                  ['MT', 'MT'],
                                  ['NC', 'NC'],
                                  ['ND', 'ND'],
                                  ['NE', 'NE'],
                                  ['NH', 'NH'],
                                  ['NJ', 'NJ'],
                                  ['NM', 'NM'],
                                  ['NV', 'NV'],
                                  ['NY', 'NY'],
                                  ['OH', 'OH'],
                                  ['OK', 'OK'],
                                  ['OR', 'OR'],
                                  ['PA', 'PA'],
                                  ['RI', 'RI'],
                                  ['SC', 'SC'],
                                  ['SD', 'SD'],
                                  ['TN', 'TN'],
                                  ['TX', 'TX'],
                                  ['UT', 'UT'],
                                  ['VA', 'VA'],
                                  ['VT', 'VT'],
                                  ['WA', 'WA'],
                                  ['WI', 'WI'],
                                  ['WV', 'WV'],
                                  ['WY', 'WY']], {}, {class: 'form-control'} %>
          </td>
          <td>
            <%= f.label :zip %>
            <%= f.text_field :zip, class: 'form-control' %>
          </td>
        </tr>
        <tr>
          <td colspan="3">
            <%= f.label :purpose %>
            <%= f.text_field :purpose, class: 'form-control' %>
          </td>
        </tr>
      </table>
    <%= f.submit "Add Record", class: 'btn btn-lg btn-primary form-control' %>
    <% end %>
  </div>
</div>
